<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Grocery.App.ViewModels"
             xmlns:m="clr-namespace:Grocery.Core.Models;assembly=Grocery.Core"
             x:Class="Grocery.App.Views.BestSellingProductsView"
             x:DataType="vm:BestSellingProductsViewModel"
             Title="Best verkochte producten">

	<Shell.TitleView>
		<Grid Padding="8">
			<Label Text="Meest verkocht:"
                   FontSize="Caption"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   VerticalOptions="Center" />
		</Grid>
	</Shell.TitleView>

	<ContentPage.Content>
		<Border Stroke="#C49B33"
                StrokeThickness="4"
                Padding="10"
                Margin="10">

			<CollectionView ItemsSource="{Binding Products}"
                            ItemsLayout="VerticalList"
                            ItemSizingStrategy="MeasureAllItems"
                            SelectionMode="None"
							Margin="10">
				<CollectionView.EmptyView>
					<Grid Padding="24">
						<Label Text="Geen gegevens beschikbaar." 
                               HorizontalTextAlignment="Center" />
					</Grid>
				</CollectionView.EmptyView>

				<CollectionView.Header>
					<Grid ColumnDefinitions="0.5*,*,*,*"
                          Padding="8,6"
                          BackgroundColor="#F2E9D1">
						<Label Grid.Column="0" Text="#" />
						<Label Grid.Column="1" Text="Product" />
						<Label Grid.Column="2" Text="Verkocht"
                               HorizontalTextAlignment="End" />
						<Label Grid.Column="3" Text="Voorraad"
                               HorizontalTextAlignment="End" />
					</Grid>
				</CollectionView.Header>

				<!-- Rij -->
				<CollectionView.ItemTemplate>
					<DataTemplate x:DataType="m:BestSellingProducts">
						<Border Stroke="WhiteSmoke"
                                StrokeThickness="2"
                                StrokeShape="RoundRectangle 10"
                                Padding="8"
                                Margin="0,7">
							<Grid ColumnDefinitions="0.5*,*,*,*"
                                  ColumnSpacing="7">
								<Label Grid.Column="0" Text="{Binding Ranking}" 
                                       VerticalTextAlignment="Center" />
								<Label Grid.Column="1" Text="{Binding Name}"
                                       LineBreakMode="TailTruncation"
                                       VerticalTextAlignment="Center" />
								<Label Grid.Column="2" Text="{Binding NrOfSells}"
                                       HorizontalTextAlignment="End"
                                       VerticalTextAlignment="Center" />
								<Label Grid.Column="3" Text="{Binding Stock}"
                                       HorizontalTextAlignment="End"
                                       VerticalTextAlignment="Center" />
							</Grid>
						</Border>
					</DataTemplate>
				</CollectionView.ItemTemplate>

			</CollectionView>
		</Border>
	</ContentPage.Content>
</ContentPage>
